platform :ios, '13.0'

target 'Runner' do
  use_frameworks!

  # Add Flutter pods
  flutter_application_path = '../..'
  load File.join(flutter_application_path, '.flutter-plugins')

  # Ensure this function is included to handle Flutter dependencies
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Function to install all iOS pods for Flutter
def flutter_install_all_ios_pods(flutter_application_path)
  flutter_application_path = File.expand_path(flutter_application_path)
  podfile = File.join(flutter_application_path, '.flutter-plugins')
  if File.exist?(podfile)
    instance_eval(File.read(podfile), podfile, 1)
  end
end
